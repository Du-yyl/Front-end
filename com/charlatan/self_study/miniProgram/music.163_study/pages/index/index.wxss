/* pages/index/index.wxss */
.indexContainer{
	font-weight: 100;
}
/* 轮播图 */
.banners {
	width: 100%;
	height: 300rpx;
	background: #000;
	position: relative;
}

.banners image {
	width: 100%;
	height: 100%;
}

.navContainer {
	position: relative;
	width: 100%;
	height: 180rpx;
	background: #ffffff;
	display: flex;
}

/* 导航区的五个图标 */
.navItem {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 20%;
}

.navItem .iconfont {
	position: relative;
	top: 0;
	width: 100rpx;
	height: 100rpx;
	display: flex;
	justify-content: center;
	line-height: 100rpx;
	font-size: 50rpx;
	background: #ec141a;
	color: #dff1c9;
	border-radius: 50%;
	margin: 20rpx 0 0 0;
}

.navItem text {
	position: relative;
	top: -24rpx;
	font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer {
	width: 100%;
	height: 440rpx;
	position: relative;
	background: #f6e1e1;
}

.recommendContainer .songsShow {
	width: auto;
	padding: 30rpx 10rpx 0 10rpx;
	height: 300rpx;
	background: #ffffff;
	display: flex;
	justify-content: space-between;
}

.recommendContainer .songsShow .scrollItem {
	padding: 0 10rpx 0 10rpx;
}

.recommendContainer .songsShow .scrollItem image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 30rpx;
}

.recommendContainer .songsShow .scrollItem text {
	width: 100%;
	height: 80rpx;
	font-size: 30rpx;
	overflow: hidden; /* 超出隐藏 */
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical; /* 设置对其模式 */
	-webkit-line-clamp: 2; /* 指定显示文本的行数 */
}

/* 推荐歌单 */
.topList {
	width: 100%;
	position: relative;
}

.topList .topListSwiper {
	margin-top: 20rpx;
	width: 100%;
	height: 570rpx;
	display: flex;
	font-size: 28rpx;
}

.topList .topListSwiper swiper-item {
	display: flex;
	background: #ffffff;
	flex-direction: column;
	align-content: center;

}

.topList .topListSwiper swiper-item .title {
	font-size: 28rpx;
	padding-left: 20rpx;
	margin-bottom: 20rpx;
}

.topList .topListSwiper swiper-item .musicItem {
	width: 100%;
	height: 100rpx;
	background: #f5f5f5;
	border-radius: 20rpx;
	margin: 10rpx 0 10rpx 20rpx;
	display: flex;
	flex-direction: row;
	align-content: center;
}

.topList .topListSwiper swiper-item .musicItem image {
	height: 100rpx;
	width: 100rpx;
	border-radius: 10rpx;
}

.topList .topListSwiper swiper-item .musicItem .count {
	margin-left: 30rpx;
	line-height: 35rpx;
}
.topList .topListSwiper swiper-item .musicItem .musicName {
	margin-left: 30rpx;
	line-height: 35rpx;
	width: 60%;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;

}
