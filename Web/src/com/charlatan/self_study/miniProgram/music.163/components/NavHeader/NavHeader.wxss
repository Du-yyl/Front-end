.header {
	width: 100%;
	height: 120rpx;
	background: #ffffff;
	display: flex;
	flex-direction: column;
}

.header .title {
	font-size: 28rpx;
	color: #575757;
	margin-left: 20rpx;

}

.header .headerTitle {
	/* position: relative; */
	/* top: -30rpx; */
	display: flex;
	flex-direction: row;
	font-size: 30rpx;
	justify-content: space-between;
	align-items: start;
	margin: 0 20rpx 0 20rpx;
}

.header .headerTitle text {
	height: 60rpx;
	text-align: center;
	line-height: 20rpx;
}

.header .headerTitle .more {
	width: auto;
	height: 40rpx;
	padding: 4rpx 12rpx;
	text-align: center;
	line-height: 14rpx;
	border-radius: 20rpx;
	font-size: 26rpx;
	border: 2rpx solid black;
	background: white;
}
