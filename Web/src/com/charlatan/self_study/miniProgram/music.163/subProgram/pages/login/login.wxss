/* pages/login/login.wxss */
.wrapper {
	position: relative;
	z-index: 90;
	padding-bottom: 40rpx;
}

.left-top-sign {
	font-size: 120rpx;
	color: #f8f8f8;
	position: relative;
	left: -16rpx;
}

.welcome {
	position: relative;
	left: 50rpx;
	top: -90rpx;
	font-size: 46rpx;
	color: #555;
}


.input-content {
	padding: 0 60rpx;
}

.input-item {
	/* display: flex; */
	/* flex-direction: column; */
	/* align-items: flex-start; */
	/* justify-content: center; */
	padding: 0 30rpx;
	/* background: #f8f6fc; */
	height: 120rpx;
	border-radius: 4px;
	margin-bottom: 50rpx;
	position: relative;
	font-weight: 100;
}

.input-item .phone {
	display: block;
	height: 100rpx;
	padding-left: .5em;
	transition: all .3s;
	font-weight: 500;
	border: 2px solid rgba(255, 255, 255, 0);

}

.input-item .showPhone {
	display: block;
	height: 100rpx;
	padding-left: .5em;
	border: 2px solid #d23c34;
}

.input-item .phoneText {
	position: absolute;
	top: 30rpx;
	color: #000;
	font-size: 38rpx;
	left: 54rpx;
	background: white;
	transition: all .4s cubic-bezier(0, 1.5, .6, 1);

}

.input-item .showPhoneText {
	position: absolute;
	top: -18rpx;
	color: #000;
	font-size: 28rpx;
	left: 54rpx;
	background: white;
}

.input-item:last-child {
	margin-bottom: 0;
}

.input-item .tit {
	height: 50rpx;
	line-height: 56rpx;
	font-size: 30rpx;
	color: #606266;
}

.input-item input {
	height: 60rpx;
	font-size: 30rpx;
	color: #303133;
	width: 100%;
}

.input-item .password {
	display: block;
	height: 100rpx;
	padding-left: .5em;
	transition: all .3s;
	font-weight: 500;
	border: 2px solid rgba(210, 60, 52, 0);

}

.input-item .showPassword {
	display: block;
	height: 100rpx;
	padding-left: .5em;
	border: 2px solid #d23c34;
}

.input-item .passwordText {
	position: absolute;
	top: 30rpx;
	color: #000;
	font-size: 38rpx;
	left: 54rpx;
	background: white;
	transition: all .4s cubic-bezier(0, 1.5, .6, 1);
}

.input-item .showPasswordText {
	position: absolute;
	top: -18rpx;
	color: #000;
	font-size: 28rpx;
	left: 54rpx;
	background: white;
}


.input-item .HintText {
	position: relative;
	font-size: 24rpx;
	top: -46rpx;
	color: #ff8000;
	font-weight: 500;
}


.confirm-btn {
	width: 630rpx !important;
	height: 76rpx;
	line-height: 76rpx;
	border-radius: 50rpx;
	margin-top: 70rpx;
	background: #d43c33;
	color: #fff;
	font-size: 32rpx;
	padding: 0;
}

.confirm-btn2:after {
	border-radius: 100px;
}

.forget-section {
	font-size: 28rpx;
	color: #4399fc;
	text-align: center;
	margin-top: 40rpx;
}

.register-section {
	position: absolute;
	left: 0;
	bottom: 50rpx;
	width: 100%;
	font-size: 28rpx;
	color: #606266;
	text-align: center;

}

.register-section text {
	color: #4399fc;
	margin-left: 10rpx;
}
