/* pages/index/index.wxss */

/* 每一个组件都会被包裹一个 page 标签，可以通过设置 page 的标签，设置这个整个标签的宽高 */
.indexContainer {
	display: flex;
	height: 100%;
	flex-direction: column;
	align-items: center;
	background: #d79f9f;
}

.avatarUrl {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
	margin: 120rpx;
}

.userName {
	font-size: 32rpx;
	margin: 100rpx 0;
}

.showTitle {
	width: 300rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 28rpx;
	border: 1px solid black;
	border-radius: 15rpx;
}
